{
	"$schema": "https://vega.github.io/schema/vega/v4.json",
	"width": 800,
	"height": 350,
	"padding": 0,
	"autosize": {"type": "fit", "resize": true},
	"data": [{
		"name": "lightcurve",
		"url": "lightcurve2.csv",
		"format": {"type": "csv", "parse": {"x":"date", "value":"number", "error":"number", "note":"string"}}
	},{
		"name": "threshold",
		"values": "x,value\n2018-10-29T13:53:18.0Z,1\n2018-10-29T13:53:21.0Z,1\n2018-10-29T13:53:23.0Z,\n2018-10-29T13:53:26.0Z,1\n2018-10-29T13:53:28.8Z,1\n",
		"format": {"type": "csv", "parse": {"x":"date", "value":"number"}}
	}],
	"scales": [{
		"name": "xscale",
		"type": "time",
		"range": "width",
		"zero": false,
		"domain": {"data": "lightcurve", "field": "x"}
	},{
		"name": "yscale",
		"type": "linear",
		"range": "height",
		"zero": false,
		"domain": {"data": "lightcurve", "field": "value"}
	}],
	"axes": [
		{
			"orient": "bottom",
			"scale": "xscale",
			"title": "Observation time"
		},{
			"orient": "left",
			"scale": "yscale",
			"title": "Intensity"
		}
	],
	"marks":[{
		"type": "line",
		"description": "Baseline",
		"from": {"data": "threshold"},
		"encode": {
			"enter": {
				"x": {"scale": "xscale", "field": "x"},
				"y": {"scale": "yscale", "field": "value"},
				"strokeWidth": {"value": 2},
				"tooltip": {"field": "tooltip"}
			},
			"update": {
				"stroke": {"value": "#396bad"},
				"fillOpacity": {"value": 1},
				"zindex": {"value": 0}
			}
		}
	},{
		"type": "rect",
		"description": "Error bars",
		"from": {"data": "lightcurve"},
		"encode": {
			"enter": {
				"x": {"scale": "xscale", "field": "x"},
				"y": {"scale": "yscale", "signal": "datum['value'] - datum['error']"},
				"y2": {"scale": "yscale", "signal": "datum['value'] + datum['error']"},
				"width": {"value": 1},
				"fill": {"value": "#000000"}
			},
			"update": {
				"fillOpacity": {"value": 0.5},
				"fill": {"value": "#FF7F00"},
				"zindex": {"value": 0},
				"width": {"value": 1}
			},
			"hover": {
				"fill": {"value": "#0DBC37"},
				"fillOpacity": {"value": 1},
				"width": {"value":5},
				"zindex": {"value": 1},
				"tooltip": {"signal":"{'Title': 'Lightcurve', 'Date': timeFormat(datum.x,'%B %d, %Y'),'Time': timeFormat(datum.x,'%H:%M:%S.%L'), 'Unix': datum.x, 'Y': datum.value, 'Note': datum.note}"}
			}
		}
	},{
		"type": "symbol",
		"description": "Data points",
		"from": {"data": "lightcurve"},
		"encode": {
			"enter": {
				"x": {"scale": "xscale", "field": "x"},
				"y": {"scale": "yscale", "field": "value"},
				"shape": {"value": "circle"}
			},
			"update": {
				"shape": "cross",
				"fill": {"value": "#FF7F00"},
				"fillOpacity": {"value": 1},
				"shape": {"value": "circle"},
				"size": {"value": 36},
				"zindex": {"value": 0}
			},
			"hover": {
				"fill": {"value":"#0DBC37"},
				"fillOpacity": {"value": 1},
				"shape": {"value": "diamond"},
				"size": {"value": 400},
				"zindex": {"value": 1},
				"tooltip": {"signal":"{'Title': 'Lightcurve', 'Date': timeFormat(datum.x,'%B %d, %Y'),'Time': timeFormat(datum.x,'%H:%M:%S.%L'), 'Unix': datum.x, 'Y': datum.value, 'Note': datum.note}"}
			}
		}
	}]
}