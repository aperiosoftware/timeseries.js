{
	"$schema": "https://vega.github.io/schema/vega/v4.json",
	"width": 800,
	"height": 350,
	"padding": 0,
	"autosize": {"type": "fit", "resize": true},
	"data": [{
		"name": "lightcurve",
		"url": "lightcurve.csv",
		"format": {"type": "csv", "parse": {"x":"number", "value":"number", "error":"number", "note":"string"}}
	}],
	"marks":[{
		"type": "rect",
		"from": {"data": "lightcurve"},
		"encode": {
			"enter": {
				"x": {"scale": "xscale", "field": "x"},
				"y": {"scale": "yscale", "field": "datum.value - datum.error"},
				"y2": {"scale": "yscale", "field": "datum.value + datum.error"},
				"width": {"value": 1},
				"fill": {"value": "#000000"}
			},
			"update": {
				"fillOpacity": {"value": 0.5},
				"fill": {"value": "#FF7F00"},
				"zindex": {"value": 0},
				"width": {"value": 1}
			},
			"hover": {
				"fill": {"value": "#0DBC37"},
				"fillOpacity": {"value": 1},
				"width": {"value":5},
				"zindex": {"value": 1}
			}
		}
	},{
		"type": "symbol",
		"from": {"data": "lightcurve"},
		"encode": {
			"enter": {
				"x": {"scale": "xscale", "field": "x"},
				"y": {"scale": "yscale", "field": "value"},
				"shape": {"value": "circle"}
			},
			"update": {
				"shape": "cross",
				"fill": {"value": "#FF7F00"},
				"fillOpacity": {"value": 1},
				"shape": {"value": "circle"},
				"size": {"value": 6},
				"zindex": {"value": 0}
			},
			"hover": {
				"fill": {"value":"#0DBC37"},
				"fillOpacity": {"value": 1},
				"shape": {"value": "diamond"},
				"size": {"value": 20},
				"zindex": {"value": 1},
				"tooltip": {"signal":"'Time: ' + datum.x + '<br />Y: ' + datum.y + (datum.note ? '<br />Note:' + datum.note:'')"}
			}
		}
	}]
}