{
	"$schema": "https://vega.github.io/schema/vega/v4.json",
	"width": 800,
	"height": 350,
	"padding": 0,
	"autosize": {"type": "fit", "resize": true},
	"data": [{
		"name": "lightcurve",
		"url": "goes_xrs_timeseries.csv",
		"format": {"type": "csv", "parse": {"time":"date", "xrsa":"number", "xrsb":"number"}}
	}],
	"scales": [{
		"name": "xscale",
		"type": "time",
		"range": "width",
		"zero": false,
		"domain": {"data": "lightcurve", "field": "time"}
	},{
		"name": "yscale",
		"type": "log",
		"range": "height",
		"zero": false,
		"domain": {"data": "lightcurve", "field": "xrsa"}
	}],
	"axes": [
		{
			"orient": "bottom",
			"scale": "xscale",
			"title": "2011-06-06"
		},{
			"orient": "left",
			"scale": "yscale",
			"title": "Watts m^{-2}"
		}
	],
	"marks":[{
		"type": "rule",
		"description": "M2.5",
		"encode": {
			"enter": {
				"x": {"scale": "x", "signal": "(new Date('2011-06-07 05:40Z')).getTime()"},
				"y": {"scale": "y", "value": 1e-9},
				"y2": {"scale": "y", "value": 1e-3 },
				"stroke": {"value": "#1f77b4"},
				"strokeWidth": {"value": 1}
			}
		}
	},{
		"type": "rect",
		"description": "M2.5",
		"encode": {
			"enter": {
				"x": {"scale": "x", "signal": "(new Date('2011-06-07 05:20Z')).getTime()"},
				"x2": {"scale": "x", "signal": "(new Date('2011-06-07 06:00Z')).getTime()"},
				"y": {"scale": "y", "value": 1e-9},
				"y2": {"scale": "y", "value": 1e-3 },
				"fill": {"value": "#1f77b4"},
				"fillOpacity": {"value": 0.2}
			}
		}
	},{
		"type": "line",
		"description": "xrsa",
		"from": {"data": "lightcurve"},
		"encode": {
			"enter": {
				"x": {"scale": "xscale", "field": "time"},
				"y": {"scale": "yscale", "field": "xrsa"},
				"shape": {"value": "circle"}
			},
			"update": {
				"stroke": {"value": "#0000ff"},
				"zindex": {"value": 0}
			},
			"hover": {
				"stroke": {"value":"#0DBC37"},
				"strokeWidth": {"value": 2},
				"zindex": {"value": 1}
			}
		}
	},{
		"type": "line",
		"description": "xrsb",
		"from": {"data": "lightcurve"},
		"encode": {
			"enter": {
				"x": {"scale": "xscale", "field": "time"},
				"y": {"scale": "yscale", "field": "xrsb"}
			},
			"update": {
				"shape": "cross",
				"stroke": {"value": "#ff0000"},
				"zindex": {"value": 0}
			},
			"hover": {
				"stroke": {"value":"#0DBC37"},
				"strokeWidth": {"value": 2},
				"zindex": {"value": 1}
			}
		}
	}]
}