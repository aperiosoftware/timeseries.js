{
	"$schema": "https://vega.github.io/schema/vega/v4.json",
	"width": 800,
	"height": 350,
	"padding": 0,
	"autosize": {"type": "fit", "resize": true},
	"data": [{
		"name": "lightcurve",
		"url": "goes_xrs_timeseries.csv",
		"format": {"type": "csv", "parse": {"time":"date", "xrsa":"number", "xrsb":"number"}}
	},{
		"name": "events",
		"format": {"type": "json", "parse": {"when":"date"}},
		"values": [{"name":"event","when":"2011-06-07T05:40Z"}]
	},{
		"name": "ranges",
		"format": {"type": "json", "parse": {"from":"date","to":"date"}},
		"values": [{"name":"a","from":"2011-06-07 05:20Z","to":"2011-06-07 06:00Z"}]
	}],
	"scales": [{
		"name": "xscale",
		"type": "time",
		"range": "width",
		"zero": false,
		"domain": {"data": "lightcurve", "field": "time"}
	},{
		"name": "yscale",
		"type": "log",
		"range": "height",
		"zero": false,
		"domain": {"data": "lightcurve", "field": "xrsa"}
	}],
	"axes": [
		{
			"orient": "bottom",
			"scale": "xscale",
			"title": "2011-06-06",
			"titleFontWeight": "normal",
			"gridColor": "black",
			"domainColor": "black",
			"tickColor": "black"
		},{
			"orient": "left",
			"scale": "yscale",
			"grid": true,
			"title": "Watts m^{-2}",
			"titleFontWeight": "normal",
			"gridColor": "black",
			"domainColor": "black",
			"tickColor": "black"
		}
	],
	"marks":[{
		"type": "rule",
		"description": "M2.5",
		"from": {"data": "events"},
		"encode": {
			"enter": {
				"x": {"scale": "xscale", "signal": "datum.when" },
				"y": { "value": 0 },
				"y2": { "field": {"group": "height"} },
				"stroke": {"value": "#1f77b4"},
				"strokeWidth": {"value": 1}
			}
		}
	},{
		"type": "rect",
		"description": "M2.5",
		"from": {"data": "ranges"},
		"encode": {
			"enter": {
				"x": {"scale": "xscale", "signal": "datum.from"},
				"x2": {"scale": "xscale", "signal": "datum.to"},
				"y": { "value": 0 },
				"y2": { "field": {"group": "height"} },
				"fill": {"value": "#1f77b4"},
				"fillOpacity": {"value": 0.2}
			}
		}
	},{
		"type": "line",
		"description": "xrsa",
		"from": {"data": "lightcurve"},
		"encode": {
			"enter": {
				"x": {"scale": "xscale", "field": "time"},
				"y": {"scale": "yscale", "field": "xrsa"},
				"strokeWidth": {"value": 1}
			},
			"update": {
				"stroke": {"value": "#0000ff"},
				"zindex": {"value": 0}
			},
			"hover": {
				"stroke": {"value":"#0DBC37"},
				"strokeWidth": {"value": 2},
				"zindex": {"value": 1}
			}
		}
	},{
		"type": "line",
		"description": "xrsb",
		"from": {"data": "lightcurve"},
		"encode": {
			"enter": {
				"x": {"scale": "xscale", "field": "time"},
				"y": {"scale": "yscale", "field": "xrsb"},
				"strokeWidth": {"value": 2}
			},
			"update": {
				"shape": "cross",
				"stroke": {"value": "#ff0000"},
				"zindex": {"value": 0}
			},
			"hover": {
				"stroke": {"value":"#0DBC37"},
				"strokeWidth": {"value": 3},
				"zindex": {"value": 1}
			}
		}
	}]
}